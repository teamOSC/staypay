<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/room_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/room_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/room_image"
            android:layout_toRightOf="@+id/room_image"
            android:text="New Text" />

        <TextView
            android:id="@+id/room_available"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/room_type"
            android:layout_toEndOf="@+id/room_image"
            android:layout_toRightOf="@+id/room_image"
            android:text="New Text" />

        <TextView
            android:id="@+id/room_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/room_available"
            android:layout_toEndOf="@+id/room_image"
            android:layout_toRightOf="@+id/room_image"
            android:text="New Text" />

        <TextView
            android:id="@+id/room_beds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/room_rate"
            android:layout_toEndOf="@+id/room_image"
            android:layout_toRightOf="@+id/room_image"
            android:text="New Text" />

    </RelativeLayout>
</android.support.v7.widget.CardView>