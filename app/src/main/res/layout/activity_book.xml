<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/holo_orange_light"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.greplr.staypay.BookActivity">

        <TextView
            android:fontFamily="sans-serif-thin"
            android:textSize="30dp"
            android:textAlignment="center"
            android:text="Presidential Suite"
            android:layout_gravity="center"
            android:id="@+id/booking_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <DatePicker
            android:id="@+id/booking_date_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:calendarViewShown="false" />

        <EditText
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:id="@+id/booking_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minEms="10"
            android:hint="Name" />

        <Button
            android:layout_gravity="center_horizontal"
            android:id="@+id/booking_id"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Upload ID" />

        <Button
            android:layout_gravity="center_horizontal"
            android:id="@+id/booking_submit"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Book" />

    </LinearLayout>

</ScrollView>
